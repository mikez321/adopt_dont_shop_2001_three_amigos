<h2>Edit Review</h2>

<section id="edit-review-#{review.id}">
  <% flash.each do |name, msg| %>
    <div class="error_message"><%= msg %></div>
  <% end %>

  <%= form_tag("/shelters/#{@review.shelter_id}/reviews/#{@review.id}", method: :patch)  do %>

    <%= label_tag "Title" %>
    <%= text_field_tag :title %><br/>
    <%= label_tag "Rating" %>
    <%= text_field_tag :rating %><br/>
    <%= label_tag "Content" %>
    <%= text_field_tag :content %><br/>
    <%= label_tag "Image (optional)" %>
    <%= text_field_tag :review_image %><br/>

    <%= submit_tag "Submit Review" %>
  <% end %>
</section>
