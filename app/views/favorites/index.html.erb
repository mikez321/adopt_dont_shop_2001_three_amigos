<h1>Your Favorite Pets</h1>
<h3><%= link_to "Adopt Favorite Pets", "/pet_applications/new" %></h3>
<section class="favorited-pets">

  <% if favorite.total_count > 0 %>
    <% @favorited.each do |pet| %>
      <% if pet.adopt_status == "Adoptable" %>
        <div id="favorite-<%= pet.id %>" class="pet_block">
          <%= image_tag(pet.image) %><br/>
          <%= link_to "#{pet.name}", "/pets/#{pet.id}", method: :get %><br/>
          <%= link_to "Remove Favorite", "/favorites/#{pet.id}", method: :patch %>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <h3>You Have No Favorite Pets</h3>
  <% end %>
</section>

<div id="unfavorite-link">
      <%= link_to "Unfavorite All Pets", "/favorites", method: :delete %><br/>
</div>

<ul class="pending-pets">The Following Pets have pending applications:
  <% @favorited.each do |pet| %>
    <% if pet.adopt_status == "Pending" %>
      <li><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></li>
    <% end %>
  <% end %>
</ul>
