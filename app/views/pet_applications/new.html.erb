<h1>Apply for a pet</h1>
<% @favorite_pets.each do |pet| %>
  <%= check_box_tag(:select_pet) %>
  <%= label_tag(:select_pet, "#{pet.name}") %><br/>
<% end %>
<section>
  <%= form_tag "/pet_applications/#{app.id}", method: :post do %>
    <%= label_tag "Name: "%>
    <%= text_field_tag :name %><br/>
    <%= label_tag "Address: " %>
    <%= text_field_tag :address%><br/>
    <%= label_tag "City: " %>
    <%= text_field_tag :city %><br/>
    <%= label_tag "State: " %>
    <%= text_field_tag :state %><br/>
    <%= label_tag "Zip: " %>
    <%= text_field_tag :zip %><br/>
    <%= label_tag "Description: " %>
    <%= text_field_tag :description %><br/><br/>
    <%= submit_tag "Click to Apply" %>
  <% end %>
</section>
