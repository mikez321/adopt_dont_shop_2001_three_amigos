<h1>Edit Pet</h1>
<section>
  <%= form_tag "/pets/#{@pet.id}", method: :patch do %>
    <%= label_tag "Image"%>
    <%= text_field_tag :image, @pet.image%><br/>
    <%= label_tag "Name (required)" %>
    <%= text_field_tag :name, @pet.name %><br/>
    <%= label_tag "Description" %>
    <%= text_field_tag :description, @pet.description %><br/>
    <%= label_tag "Age (required)" %>
    <%= text_field_tag :age, @pet.age %><br/>
    <%= label_tag "Sex (required)" %>
    <%= text_field_tag :sex, @pet.sex %><br/><br/>

    <%= submit_tag "Submit" %>
  <% end %>
</section>
